pipeline {
    agent none 
    
    environment {
        DELOPY_TO = 'production'
        ACTION = 'deploy'
    }

    stages {
        stage('BUILD') {
            agent any  

            environment {
                BUILD_STAGE = 'yes'
            }

            steps {
                sh 'sleep 5'
            }    
        } 

        stage('TEST1') {
            agent { label 'slave1' } 
            steps {
                echo "${env.DELOPY_TO}"
            }    
        }
    }
}
