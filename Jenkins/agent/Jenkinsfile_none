pipeline {
    agent none 
    
    environment {
        DELOPY_TO = 'production'
        ACTION = 'deploy'
    }

    stages {
        stage('BUILD') {
            agent any  
            steps {
                script {
                    env.DELOPY_TO = 'new_production'
                }
                sh 'sleep 5'
            }    
        } 

        stage('TEST1') {
            agent { label 'slave1' } 
            steps {
                echo "${env.DELOPY_TO}"
            }    
        }
    }
}
