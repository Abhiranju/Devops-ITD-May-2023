boolean stageResult = true 

pipeline {
    agent any 

    stages {
        stage('STAGE1') { 
            steps {
                script {
                    try {
                        echo "This is STAGE1 execution"
                        sh 'sleep 5'
                    } catch (Exception e) {
                        echo "STAGE1 FAILED"
                        stageResult = false 
                    }
                }
            }    
        } 

        stage('STAGE2') {
            steps {
                script {
                    if (stageResult == true) {
                        echo "STAGE1 is sccuess so Executing STAGE2"
                    }
                }
            }    
        }

        stage('STAGE3') {
            steps {
                script {
                    if (stageResult == false) {
                        echo "STAGE1 failed so Executing STAGE3"
                    }
                }
            }      
        }
    }
}
